{
    "name": "automation-dashboard",
    "author": "Saturnino Abril",
    "version": "0.2.0",
    "license": "MIT",
    "scripts": {
        "test": "jest",
        "prepare": "husky install",
        "analyze": "BUNDLE_ANALYZE=both next build",
        "dev": "next dev -p 4000",
        "build": "next build",
        "start": "next start -p 4000",
        "migrate:make": "knex migrate:make",
        "migrate:latest": "knex migrate:latest",
        "migrate:up": "knex migrate:up",
        "migrate:down": "knex migrate:down",
        "migrate:status": "knex migrate:status",
        "seed:create": "knex seed:make",
        "seed:run": "knex seed:run",
        "format": "npm run format:check --write",
        "format:check": "prettier --check \"**/*.md\" \"*.js\" \"*.json\" \"{components,data,knex,lib,middleware,pages,public,script,types}/**/*.{js,ts,jsx,tsx}\" \"{components,knex,lib,middleware,pages,public,script,types}/*.{js,ts,jsx,tsx}\"",
        "lint": "next lint",
        "prettier:fix": "prettier --write .",
        "find:unused": "npx next-unused",
        "db:start": "docker-compose -f docker/docker-compose.yml up -d",
        "db:stop": "docker-compose -f docker/docker-compose.yml down",
        "db:remove": "docker-compose -f docker/docker-compose.yml rm",
        "check-types": "tsc -b"
    },
    "dependencies": {
        "dayjs": "1.11.7",
        "joi": "17.9.1",
        "jsonwebtoken": "9.0.0",
        "knex": "2.4.2",
        "lodash.intersectionby": "4.7.0",
        "lodash.pickby": "4.6.0",
        "next": "13.2.4",
        "next-connect": "0.13.0",
        "node-fetch": "3.3.1",
        "pg": "8.10.0",
        "prism-react-renderer": "1.3.5",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sharp": "0.32.0",
        "swr": "2.1.2"
    },
    "devDependencies": {
        "@jest/globals": "29.5.0",
        "@types/jest": "29.5.0",
        "@types/jsonwebtoken": "9.0.1",
        "@types/lodash.pickby": "4.6.7",
        "@types/node": "18.15.11",
        "@types/react": "18.0.32",
        "@types/react-dom": "18.0.11",
        "autoprefixer": "10.4.14",
        "babel-eslint": "10.1.0",
        "eslint": "8.37.0",
        "eslint-config-next": "13.2.4",
        "eslint-config-prettier": "8.8.0",
        "husky": "8.0.3",
        "jest": "29.5.0",
        "lint-staged": "13.2.0",
        "next-unused": "0.0.6",
        "postcss": "8.4.21",
        "postcss-import": "15.1.0",
        "prettier": "2.8.7",
        "tailwindcss": "3.3.1",
        "tailwindcss-hyphens": "0.1.0",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.0.3"
    },
    "engines": {
        "node": ">=16.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "npm run lint",
            "npm run prettier:fix",
            "git add"
        ],
        "**/*.{md,mdx,json}": [
            "npm run prettier:fix",
            "git add"
        ]
    },
    "next-unused": {
        "alias": {
            "@components/*": [
                "components/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@middleware/*": [
                "middleware/*"
            ],
            "@pages/*": [
                "pages/*"
            ]
        },
        "debug": true,
        "include": [
            "components",
            "lib",
            "pages"
        ],
        "exclude": [],
        "entrypoints": [
            "pages"
        ]
    }
}
